<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_title_height"
            >

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:padding="11dp"
                android:src="@drawable/back_selector" />


            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45dp"
                android:padding="13dp"
                android:src="@drawable/close_selector" />


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="标题"
                android:textColor="@color/common_color_333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/right_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/common_dp5"
                android:padding="11dp"
                android:visibility="gone" />

            <View
                android:id="@+id/title_line"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@color/common_hui_line"></View>

        </RelativeLayout>

    </LinearLayout>

    <com.jbb.library_common.widght.XWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
