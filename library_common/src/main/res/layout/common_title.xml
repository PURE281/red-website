<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_title_height"
    android:background="@color/common_white">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="@dimen/backbtn_size"
        android:layout_height="@dimen/backbtn_size"
        android:layout_centerVertical="true"
        android:padding="11dp"
        android:src="@drawable/back_selector" />


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_18dp" />

    <ImageView
        android:id="@+id/right_iv"
        android:layout_width="@dimen/backbtn_size"
        android:layout_height="@dimen/backbtn_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_dp5"
        android:padding="11dp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/right_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp10"
        android:gravity="center"
        android:text=""
        android:textColor="@color/common_black"
        android:textSize="@dimen/common_16dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="@color/common_hui_line" />

</RelativeLayout>

